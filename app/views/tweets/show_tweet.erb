<div id="user-box">
  <h2>Welcome, <%= current_user.username.capitalize %></h2>
</div>

<div class="col-1">
  <nav>
    <ul>
      <li><a href="/tweets/<%= @tweet.id %>/edit">EDIT THIS TWEET</a></li>
      <li><a href='/tweets'>RETURN TO HOME</a></li>
      <li><a href='/logout'>LOGOUT</a></li>
    </ul>
  </nav>
</div> <!-- end of navigation col !-->

<div class="col-2" id="tweet-content">
  <h2>Your latest tweet:</h2>
    <p><%= @tweet.content %></p><br>

    <form method="POST" action="/tweets/<%= @tweet.id %>/delete">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" id="submit" value="Delete Tweet">
    </form>
</div>

